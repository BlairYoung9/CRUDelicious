@model List<CRUDelicious.Models.Dish>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class = "container p-3">
        <h1 class ="pb-3 m-3 border-bottom">Welcome to CRUDelicious</h1>
        <div class = "container d-flex justify-content-between mt-4">
            <div class = "col-4 p-3">
                <p class ="container justify-content-between">
                    Check out some recent dishes!    
                </p>
                <div>
                    @foreach (var item in Model )
                    {
                        <a href="dish/info/@item.DishId">@item.Name</a> 
                    }
                    
                </div>
                <a href="/new"><button class = "m-3">Add Dish</button></a>
                <a href="/"><button class = "m-3">Home</button></a>
            </div>
        </div>
    </div>
</body>
</html>