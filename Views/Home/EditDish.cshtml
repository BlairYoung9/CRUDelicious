@model CRUDelicious.Models.Dish
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Edit Dish</title>
</head>
<body>
    <div class = "container p-3">
        <h1 class ="pb-3 m-3 border-bottom">Edit @Model.Name</h1>
        <div class = "container d-flex justify-content-between mt-4">
            <div class = "col-4">
                <form asp-action = "UpdateDish">
                    <p class ="d-flex justify-content-between">
                        Chef Name:
                        <span asp-validation-for="Chef"></span>
                        <input asp-for ="Chef">
                    </p>
                    <p class ="d-flex justify-content-between">
                        Dish Name:
                        <span asp-validation-for="Name"></span>
                        <input asp-for ="Name">
                    </p>
                    <p class ="d-flex justify-content-between">
                        Calories:
                        <span asp-validation-for="Calories"></span>
                        <input asp-for ="Calories">
                    </p>
                    <p class ="d-flex justify-content-between">Tastiness
                        <span asp-validation-for="Tastiness"></span>
                        <select asp-for="Tastiness">
                            <option value = "5">5</option>
                            <option value = "4">4</option>
                            <option value = "3">3</option>
                            <option value = "2">2</option>
                            <option value = "1">1</option>
                        </select>
                    </p>
                    <p>Description :
                        <span asp-validation-for="Description"></span>
                        <textarea asp-for ="Description" cols="55" rows="3"></textarea>
                    </p>
                    <button class="btn btn-primary mt-2">Edit Dish</button>
                </form>
                <a href="/"><button class = "m-3">Home</button></a>
            </div>
        </div>
    </div>
</body>
</html>